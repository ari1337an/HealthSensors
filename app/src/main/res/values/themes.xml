<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.HealthSensors" parent="Theme.AppCompat.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
<!--        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>-->
        <item name="android:statusBarColor">@color/colorPrimary</item>
        <!-- Customize your theme here. -->
        <item name="colorShadowDark">@color/black</item>
        <item name="colorShadowLight">@color/white</item>
    </style>

    <style name="Theme.HealthSensors.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorShadowDark">@color/black</item>
        <item name="colorShadowLight">@color/white</item>
    </style>

    <style name="Theme.HealthSensors.Custom" parent="Theme.Material3.Light.NoActionBar">
        <item name="colorShadowDark">@color/black</item>
        <item name="colorShadowLight">@color/white</item>
    </style>

    <style name="Theme.HealthSensors.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.HealthSensors.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>